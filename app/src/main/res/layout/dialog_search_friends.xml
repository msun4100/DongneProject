<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/z_dialog_search_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edit_search_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="106dp"
            android:layout_marginRight="20dp"
            android:textSize="@dimen/search_text_size"
            android:hint="이 름"
            android:textColorHint="@color/signupHintColor"
            android:textColor="@color/signupFontColor"
            android:singleLine="true"
            android:inputType="text"
            android:nextFocusDown="@+id/edit_search_dept"/>

        <Spinner
            android:id="@+id/spinner"
            android:spinnerMode="dropdown"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="1dp"
            android:textColorHint="@color/signupHintColor"
            android:textColor="@color/signupFontColor"
            android:textSize="@dimen/search_text_size"
            android:background="@null"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="20dp"/>
        <!--<kr.me.ansr.common.CustomEditText-->
            <!--android:id="@+id/edit_search_enteryear"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@null"-->
            <!--android:layout_marginTop="14dp"-->
            <!--android:layout_marginLeft="106dp"-->
            <!--android:layout_marginRight="20dp"-->
            <!--android:textSize="@dimen/search_text_size"-->
            <!--android:hint="학 번"-->
            <!--android:textColorHint="@color/signupHintColor"-->
            <!--android:textColor="@color/signupFontColor"-->
            <!--android:singleLine="true"-->
            <!--android:inputType="text"-->
            <!--android:nextFocusDown="@+id/edit_search_dept"/>-->

        <EditText
            android:id="@+id/edit_search_dept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="106dp"
            android:layout_marginRight="20dp"
            android:textSize="@dimen/search_text_size"
            android:hint="학 과"
            android:textColorHint="@color/signupHintColor"
            android:textColor="@color/signupFontColor"
            android:singleLine="true"
            android:inputType="text"
            android:nextFocusDown="@+id/edit_search_jobname"/>

        <EditText
            android:id="@+id/edit_search_jobname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="106dp"
            android:layout_marginRight="20dp"
            android:textSize="@dimen/search_text_size"
            android:hint="회 사"
            android:textColorHint="@color/signupHintColor"
            android:textColor="@color/signupFontColor"
            android:singleLine="true"
            android:inputType="text"
            android:nextFocusDown="@+id/edit_search_jobteam"/>
        <EditText
            android:id="@+id/edit_search_jobteam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="106dp"
            android:layout_marginRight="20dp"
            android:textSize="@dimen/search_text_size"
            android:hint="직 무"
            android:textColorHint="@color/signupHintColor"
            android:textColor="@color/signupFontColor"
            android:singleLine="true"
            android:inputType="text"
            android:imeOptions="actionDone"
            />
        <LinearLayout
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_cancel"
                android:text="취 소"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:background="@null"
                android:layout_width="190dp"
                android:layout_height="30dp" />
            <Button
                android:id="@+id/btn_ok"
                android:text="확 인"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:background="@null"
                android:layout_width="190dp"
                android:layout_height="30dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>