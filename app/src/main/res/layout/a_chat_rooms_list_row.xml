<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="11dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="11dp">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/e__who_icon"
        android:id="@+id/thumb"/>
    <TextView
        android:layout_marginTop="2dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/name"
        android:layout_width="190dp"
        android:layout_height="20dp"
        android:textColor="#221e1f"
        android:text="유저명"
        android:textStyle="bold"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxLines="1"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/thumb"
        android:layout_toEndOf="@+id/thumb" />

    <TextView android:id="@+id/message"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="16dp"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textColor="#a2a1a1"
        android:textSize="13sp"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxLines="1"
        android:text="Seems gcm will take some time"
        android:layout_alignBottom="@+id/count"
        android:layout_toRightOf="@+id/thumb"
        android:layout_toEndOf="@+id/thumb" />

    <TextView android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11.11 오후 11:11"
        android:textSize="11sp"
        android:textColor="#8a8aba"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:layout_below="@id/timestamp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:text="N"
        android:background="@drawable/z_tab_count_bg"/>
    <!--android:background="@drawable/bg_circle"-->
</RelativeLayout>