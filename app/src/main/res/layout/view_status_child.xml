<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="#ffffff"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/image_friends_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="12dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/e__who_icon" />

    <FrameLayout
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">
        <ImageView

            android:id="@+id/image_friends_add"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:src="@drawable/b_list_plusicon" />
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="4dp"
            android:id="@+id/text_friends_name"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/list_name_color"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="유저명"
            android:visibility="visible"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="14dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/text_friedns_stuid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16"
                android:textSize="13sp"
                android:textColor="@color/list_univ_color"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/text_friends_dept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="컴퓨터 공학"
                android:layout_marginLeft="4dp"
                android:textSize="13sp"
                android:textColor="@color/list_univ_color"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_friends_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="마케팅ㅌㅌㅌㅌㅌㅌㅌㅌㅌㅌㅌㅌㅌㅌ"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/list_job_color"
                    android:textSize="12sp" />

            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_gravity="center_vertical|end"
            android:id="@+id/frame_msg_layout"
            android:layout_width="90dp"
            android:layout_height="match_parent">
            <TextView
                android:background="@drawable/z_btn_white_selector"
                android:id="@+id/text_friends_status_msg"
                android:layout_marginRight="12dp"
                android:layout_gravity="center_vertical|end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_default_msg"
                android:textSize="13sp"
                android:textColor="@color/valid_input" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>
