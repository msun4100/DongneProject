<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_page_gray_color"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="kr.me.ansr.tab.mypage.FriendStatusActivity"
    tools:showIn="@layout/activity_friend_status">

    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/image_my_receive"
                android:background="@drawable/f_icon_receive_2"
                android:layout_width="48dp"
                android:layout_height="69dp" />
        </FrameLayout>
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/image_my_send"
                android:background="@drawable/f_icon_send_1"
                android:layout_width="48dp"
                android:layout_height="69dp" />
        </FrameLayout>
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/image_my_block"
                android:background="@drawable/f_icon_block_1"
                android:layout_width="48dp"
                android:layout_height="69dp" />
        </FrameLayout>
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/image_my_invite"
                android:background="@drawable/f_icon_invite_1"
                android:layout_width="48dp"
                android:layout_height="69dp" />
        </FrameLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_marginTop="1dp"
        android:id="@+id/containerforstatus"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>


</LinearLayout>
