<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="13dp"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:padding="1dp"
            android:id="@+id/image_board_reply_thumb"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/e__who_icon" />
        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/frame_board_reply_reply_report"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="익 명"
                    android:textSize="14sp"
                    android:textColor="#1c3043"
                    android:id="@+id/text_board_reply_reply_name"
                     />
                <ImageView
                    android:layout_marginRight="12dp"
                    android:layout_gravity="end"
                    android:layout_width="4dp"
                    android:layout_height="15dp"
                    android:src="@drawable/e__more_1"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="댓글 내용..."
                android:textColor="#807f81"
                android:textSize="12sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/text_board_reply_reply_content"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:background="#ffffff"
        android:layout_gravity="end"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_board_reply_reply"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/e__talk"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text_board_reply_reply_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="4dp"
                android:text="5"
                android:textColor="#a2a1a1"
                android:textSize="11sp" />
        </FrameLayout>
        <LinearLayout
            android:layout_marginLeft="4dp"
            android:layout_marginRight="12dp"
            android:id="@+id/linear_board_reply_like_layout"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_board_reply_like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/e__like" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/text_board_reply_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="10"
                    android:textColor="#a2a1a1"
                    android:textSize="11sp" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>