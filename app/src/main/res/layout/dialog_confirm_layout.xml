<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="289dp"
    android:layout_height="134dp"
    android:minWidth="289dp"
    android:background="@drawable/z_btn_layout_rectangle"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="탈퇴하시겠습니까?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#57585a"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="탈퇴하시면 나의 담이 모두 삭제됩니다.\n 잘못 누르셨다면 취소를 눌러주세요."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#e54863"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" >

        <Button
            android:id="@+id/btn_dialog_cancel"
            style="?android:attr/buttonStyleSmall"
            android:visibility="gone"
            android:layout_width="120dp"
            android:layout_height="33dp"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:text="아니오"
            android:background="@drawable/z_btn_color_selector" />

        <Button
            android:id="@+id/btn_dialog_ok"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="33dp"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:text="확 인"
            android:layout_marginLeft="14dp"
            android:background="@drawable/z_btn_color_selector" />

    </LinearLayout>

</LinearLayout>
