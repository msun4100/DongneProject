<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_padding_zero"
    android:paddingLeft="@dimen/activity_padding_zero"
    android:paddingRight="@dimen/activity_padding_zero"
    android:paddingTop="@dimen/activity_padding_zero"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="kr.me.ansr.tab.friends.detail.FriendsDetailActivity"
    tools:showIn="@layout/activity_friends_detail">

    <FrameLayout
        android:id="@+id/FrameLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_friends_detail_main"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/d_write_bg" />

        <ImageView
            android:id="@+id/image_friends_detail_profile"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="bottom|left"
            android:src="@mipmap/ic_launcher" />


        <LinearLayout
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom|right">

            <TextView
                android:id="@+id/text_friends_detail_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="username"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <FrameLayout
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_friends_detail_stuid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/text_friends_detail_deptname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="산업디자인과"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>
            </FrameLayout>
            <FrameLayout
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_friends_detail_jobname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="회사명"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/text_friends_detail_jobteam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="직무명"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>
            </FrameLayout>
            <FrameLayout
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image_friends_detail_distance"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@mipmap/ic_launcher"
                    android:text="17" />

                <TextView
                    android:id="@+id/text_friends_detail_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="0.00km"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_below="@+id/FrameLayout1"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/image_friends_detail_menu_list"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/ic_launcher" />
        <ImageView
            android:id="@+id/image_friends_detail_menu_add"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginRight="36dp"
            android:layout_marginLeft="36dp"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/ic_launcher" />
        <ImageView
            android:id="@+id/image_friends_detail_menu_edit"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:minWidth="72dp"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/ic_launcher" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/LinearLayout1"
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:background="@color/lightGray"
        android:layout_height="4dp"
        android:orientation="horizontal">
    </LinearLayout>



    <ListView
        android:layout_below="@+id/LinearLayout2"
        android:id="@+id/listView_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</RelativeLayout>
