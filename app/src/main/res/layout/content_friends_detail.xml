<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_padding_zero"
    android:paddingLeft="@dimen/activity_padding_zero"
    android:paddingRight="@dimen/activity_padding_zero"
    android:paddingTop="@dimen/activity_padding_zero"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="#ffffff"
    tools:context="kr.me.ansr.tab.friends.detail.FriendsDetailActivity"
    tools:showIn="@layout/activity_friends_detail">

    <FrameLayout
        android:id="@+id/FrameLayout1"
        android:layout_width="match_parent"
        android:layout_height="306dp">

        <ImageView
            android:id="@+id/image_friends_detail_main"
            android:layout_width="wrap_content"
            android:layout_height="244dp"
            android:layout_marginBottom="58dp"
            android:scaleType="centerCrop"
            android:src="@drawable/z_profile_bg_2" />
        <ImageView
            android:id="@+id/image_friends_detail_content_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="62dp"
            android:background="@drawable/b_main_view_contents_bg" />
        <ImageView
            android:id="@+id/image_friends_detail_back_icon"
            android:padding="11dp"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/abc_ic_clear_mtrl_alpha" />
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="bottom|left">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="#ffffff"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/image_friends_detail_profile"
                android:layout_width="118dp"
                android:layout_height="118dp"
                android:minHeight="118dp"
                android:minWidth="118dp"
                android:src="@drawable/e__who_icon" />
        </FrameLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_marginTop="216dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right|bottom"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/text_friends_detail_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="7dp"
            android:textColor="#ecedec"
            android:textSize="20sp"
            android:layout_gravity="bottom|right"
            android:text="username" />
        <FrameLayout
            android:layout_marginRight="16dp"
            android:layout_marginBottom="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_friends_detail_stuid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3d3939"
                    android:textSize="14sp"
                    android:text="17"/>

                <TextView
                    android:layout_marginLeft="4dp"
                    android:id="@+id/text_friends_detail_deptname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3d3939"
                    android:textSize="14sp"
                    android:text="산업디자인과"/>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right">
            <LinearLayout
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_gravity="right"
                    android:id="@+id/text_friends_detail_jobname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#868585"
                    android:text="회사명"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="7dp"/>

                <TextView
                    android:layout_gravity="right"
                    android:id="@+id/text_friends_detail_jobteam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#868585"
                    android:text="팀명"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="7dp"/>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/image_friends_detail_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/c_artboard_final_view_location" />
                <TextView
                    android:id="@+id/text_friends_detail_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:textColor="#9c9c9d"
                    android:textSize="12sp"
                    android:text="0.00km"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_below="@+id/FrameLayout1"
        android:layout_centerHorizontal="true">
        <ImageButton
            android:id="@+id/image_friends_detail_menu_1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/z_btn_white_selector"
            android:src="@drawable/c__icon_1" />
        <ImageButton
            android:id="@+id/image_friends_detail_menu_2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/z_btn_white_selector"
            android:src="@drawable/c__icon_2" />
        <ImageButton
            android:id="@+id/image_friends_detail_menu_3"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/z_btn_white_selector"
            android:src="@drawable/c__icon_3" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_below="@+id/LinearLayout1"
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:background="@color/profile_stroke1"
        android:layout_height="0.8dp"
        android:orientation="horizontal">
    </LinearLayout>

    <FrameLayout
        android:layout_below="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fl_empty_detail_1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_empty_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/z_empty_detail_msg"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fl_empty_detail_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="29dp"
                android:background="@color/profile_stroke1"
                android:layout_width="0.75dp"
                android:layout_height="match_parent">
            </LinearLayout>
            <ListView
                android:id="@+id/listView_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>
        </FrameLayout>
    </FrameLayout>


</RelativeLayout>
