<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/b_list_searchbar"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <FrameLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <kr.me.ansr.common.CustomEditText
                android:id="@+id/custom_editText1"
                android:layout_width="300dp"
                android:layout_height="28dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"
                android:background="#ffffff"
                android:hint="게시글 검색 (작성자/내용)"
                android:textColor="@color/list_search_colorHint"
                android:textColorHint="#cbc8c6"
                android:textSize="13sp" />

            <ImageView
                android:layout_marginRight="8dp"
                android:id="@+id/image_search_icon"
                android:clickable="true"
                android:layout_gravity="end|center_vertical"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/b_list_search_icon_selector"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>