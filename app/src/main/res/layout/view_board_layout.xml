<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_board_thumb"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/e__who_icon" />

        <LinearLayout
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_board_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="유저명"
                    android:visibility="visible"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/text_board_stuid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#cbc8c6"
                    android:text="16"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/text_board_dept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#cbc8c6"
                    android:text="컴퓨터 공학"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>
        </LinearLayout>

        <EditText
            android:id="@+id/hiddenEditText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:visibility="invisible" />
        <LinearLayout
            android:layout_marginBottom="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/text_board_timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="25dp"
                    android:text="타임스탬프"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#a2a1a1"
                    android:textSize="11sp" />
                <ImageView
                    android:id="@+id/image_board_menu"
                    android:layout_width="5dp"
                    android:layout_height="17dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="1dp"
                    android:layout_gravity="bottom|end"
                    android:src="@drawable/e__more_1"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- 상단 뷰-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="59dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_board_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="교양 수업 스포츠 문화 책 구합니다."/>
        <TextView
            android:id="@+id/text_board_body_add"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="...더 보기"
            android:textColor="#FF303F9F"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:background="#ffffff"
            android:layout_marginTop="12dp"
            android:layout_gravity="end"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image_board_reply"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/e__talk"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/text_board_reply_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="4dp"
                    android:text="5"
                    android:textColor="#a2a1a1"
                    android:textSize="11sp" />
            </FrameLayout>
            <LinearLayout
                android:layout_marginLeft="4dp"
                android:layout_marginRight="12dp"
                android:id="@+id/linear_like_layout"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/image_board_like"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/e__like" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/text_board_like_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="10"
                        android:textColor="#a2a1a1"
                        android:textSize="11sp" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear_board_reply_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="20dp"
            android:orientation="vertical">

            <ListView
                android:id="@+id/listView_board"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:elevation="9dp"

                android:visibility="gone"></ListView>
            <!--android:listSelector="@android:color/transparent"-->
            <!--android:focusable="false"-->
            <!--android:focusableInTouchMode="false"-->
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/board_padding_size"
        android:background="#ecedec"
        android:orientation="horizontal">
    </LinearLayout>
</LinearLayout>
