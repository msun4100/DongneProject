<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="kr.me.ansr.image.MediaStoreActivity">

    <ScrollView
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:visibility="gone"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="투명한 동문 교류가 되기 위해 가급적 본인 사진을 등록해주세요"
                    android:textColor="@color/signupFontColor"
                    android:textSize="13sp"
                    android:id="@+id/textView" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:src="@drawable/e__who_icon"
                        android:background="@drawable/z_rectangle"
                        android:id="@+id/image_image_home_profile" />

                    <TextView
                        android:background="@drawable/z_btn_white_selector"
                        android:id="@+id/text_prof_set_change"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="22dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/image_home_change_thumb"
                        android:textSize="13sp"
                        android:textColor="@color/valid_input" />

                </LinearLayout>
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginTop="166dp"
                    android:text="   클릭 시 프로필 사진 등록 화면으로 이동합니다.\n사진을 등록하지 않으면 기본 설정으로 가입 됩니다."
                    android:id="@+id/textView3"
                    android:textColor="@color/signupFontColor"
                    android:textSize="13sp" />
            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:id="@+id/txtPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="0%"
                    android:textSize="15dp"
                    android:visibility="gone"/>
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="250dp"
                    android:layout_height="20dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_home_menu_height_white"
                android:background="@drawable/z_prof_menu_background"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내 위치 공유"
                    android:textSize="15sp"
                    android:textColor="#595757"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="invisible"/>
                <android.support.v7.widget.SwitchCompat
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sw_prof_set_location" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="6dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/signupFontColor"
                android:textSize="13sp"
                android:text="* 내 위치를 공개하면 타인의 위치를 볼 수 있습니다."/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_home_menu_height_gray"
                android:background="#ecedec"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기본 항목"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#595757"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_home_menu_height_white"
                android:background="@drawable/z_prof_menu_background"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/image_home_default2"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="학번"
                    android:background="@null"
                    android:textSize="14sp"
                    android:textColor="#595757" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_home_menu_height_white"
                android:background="@drawable/z_prof_menu_background"
                android:orientation="horizontal">
                <kr.me.ansr.common.CustomEditText
                    android:id="@+id/image_home_dept"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="학과명"
                    android:background="@null"
                    android:textSize="14sp"
                    android:textColor="#595757"
                    android:textColorHint="#99999a"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_home_menu_height_white"
                android:background="@drawable/z_prof_menu_background"
                android:orientation="horizontal">
                <kr.me.ansr.common.CustomEditText
                    android:id="@+id/image_home_input1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="회사명을 입력하시면 동문들의 회사를 볼 수 있습니다."
                    android:textSize="14sp"
                    android:textColor="#595757"
                    android:textColorHint="#99999a"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_home_menu_height_white"
                android:background="@drawable/z_prof_menu_background"
                android:orientation="horizontal">
                <kr.me.ansr.common.CustomEditText
                    android:id="@+id/image_home_input2"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="직무를 입력하시면 동문들의 회사를 볼 수 있습니다."
                    android:textSize="14sp"
                    android:textColor="#595757"
                    android:textColorHint="#99999a"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_home_menu_height_gray"
                android:background="#ecedec"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추가 항목"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#595757"
                    android:textColorHint="#99999a"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_home_menu_height_white"
                android:background="@drawable/z_prof_menu_background"
                android:orientation="horizontal">
                <kr.me.ansr.common.CustomEditText
                    android:id="@+id/image_home_input5"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="자기소개1"
                    android:textSize="14sp"
                    android:textColor="#595757"
                    android:textColorHint="#99999a"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_home_menu_height_white"
                android:background="@drawable/z_prof_menu_background"
                android:orientation="horizontal">
                <kr.me.ansr.common.CustomEditText
                    android:id="@+id/image_home_input6"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="자기소개2"
                    android:textSize="14sp"
                    android:textColor="#595757"
                    android:textColorHint="#99999a"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_home_menu_height_white"
                android:background="@drawable/z_prof_menu_background"
                android:orientation="horizontal">
                <kr.me.ansr.common.CustomEditText
                    android:id="@+id/image_home_input3"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="SNS1"
                    android:textSize="14sp"
                    android:textColor="#595757"
                    android:textColorHint="#99999a"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_home_menu_height_white"
                android:background="@drawable/z_prof_menu_background"
                android:orientation="horizontal">
                <kr.me.ansr.common.CustomEditText
                    android:id="@+id/image_home_input4"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="SNS2"
                    android:textSize="14sp"
                    android:textColor="#595757"
                    android:textColorHint="#99999a"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>