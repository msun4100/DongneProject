<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/fragment_gcmchat"
    tools:context="kr.me.ansr.tab.chat.GcmChatFragment">
    <!-- showIn fragment_chatroom-->

    <include
        layout="@layout/common_search_bar_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/include" />
    <FrameLayout
        android:layout_below="@+id/include"
        android:id="@+id/frame_empty_layout"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_empty_msg"
            android:layout_gravity="center"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/empty_msg_size"
            android:textColor="@color/empty_msg_color"
            android:textStyle="bold|italic"
            android:text="새 소식이 없습니다."/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" />
    </FrameLayout>

</RelativeLayout>
