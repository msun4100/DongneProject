<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_padding_zero"
    android:paddingLeft="@dimen/activity_padding_zero"
    android:paddingRight="@dimen/activity_padding_zero"
    android:paddingTop="@dimen/activity_padding_zero"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="kr.me.ansr.login.SignupWayActivity"
    tools:showIn="@layout/activity_signup_way">

    <LinearLayout
        android:layout_marginTop="@dimen/common_toolbar_size"
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/e_popup_mid_selector"
        android:orientation="vertical">
        <FrameLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_gravity="left|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#595858"
                android:text="이메일로 가입하기"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <ImageView
                android:id="@+id/image_way_email"
                android:layout_gravity="right|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/common_next"/>
        </FrameLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b7b6b6"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/LinearLayout1"
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/e_popup_mid_selector"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_gravity="left|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#595858"
                android:text="페이스북으로 가입하기"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <ImageView
                android:id="@+id/image_way_fb"
                android:layout_gravity="right|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/common_next"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b7b6b6"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/LinearLayout2"
        android:id="@+id/LinearLayout3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/e_popup_mid_selector"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_gravity="left|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#595858"
                android:text="카카오톡으로 가입하기"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <ImageView
                android:id="@+id/image_way_kakao"
                android:layout_gravity="right|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/common_next"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/LinearLayout3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b7b6b6"
        android:orientation="vertical">
    </LinearLayout>


</RelativeLayout>
