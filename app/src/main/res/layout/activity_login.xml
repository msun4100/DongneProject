<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a_join_login_activity_bg"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="kr.me.ansr.login.LoginActivity">

    <LinearLayout
        android:layout_marginTop="298dp"
        android:background="@drawable/a_join_login_input_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <EditText
            android:background="@null"
            android:id="@+id/login_editText1"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="이메일"
            android:textColorHint="#bcbbbd"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:nextFocusDown="@+id/login_editText2"
            android:textSize="15sp" />

        <EditText
            android:background="@null"
            android:id="@+id/login_editText2"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:fontFamily="nanum_bold"
            android:hint="비밀번호"
            android:textColorHint="#bcbbbd"
            android:imeOptions="actionSend"
            android:inputType="textPassword"
            android:lines="1"
            android:singleLine="true"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="19dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_login"
            android:layout_width="324dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/a_join_login_btn_selector"
            android:text="" />
        <Button
            android:layout_marginTop="6dp"
            android:id="@+id/btn_signup"
            android:layout_width="324dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/a_join_sign_up_btn_selector"
            android:text="" />
        <Button
            android:visibility="gone"
            android:id="@+id/btn_scroll"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:background="@drawable/a_join_login_btn_selector"
            android:text="scroll" />
        <com.nhn.android.naverlogin.ui.view.OAuthLoginButton
            android:visibility="gone"
            android:id="@+id/buttonOAuthLoginImg"
            android:layout_gravity="center_horizontal"
            android:layout_width="324dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_login_idfind"
            android:src="@drawable/a_search_idfind_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="1dp"
            android:layout_height="14dp"
            android:background="@color/colorAccent"
            android:orientation="vertical">
        </LinearLayout>
        <ImageView
            android:id="@+id/image_login_pwfind"
            android:src="@drawable/a_search_pwfind_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/a_join_login_activity_app_name"/>

    </FrameLayout>

</LinearLayout>